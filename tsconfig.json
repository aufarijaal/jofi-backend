{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "rootDir": "./src"
  },
  "include": ["**/*.d.ts", "src/**/*.ts"],
  "exclude": [
    "src/public",
    "src/uploads",
    "src/prisma/migrations",
    "src/prisma/seeders",
    "src/prisma/seed.ts"
  ],
  "ts-node": {
    "files": true
  }
}
